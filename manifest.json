{
  "name": "Bettr.Link",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Shared bookmarks",
  "homepage_url": "http://humani.se",

  "icons": {
    "16": "icons/link16.png",
    "48": "icons/link48.png",
    "128": "icons/link128.png"
  },

  "browser_action": {
    "default_icon": "icons/link19.png",
    "default_title": "Bettr.Link"
  },

  "permissions": [
    "bookmarks",
    "chrome://favicon/",
    "notifications",
    "tabs",
    "unlimitedStorage",
    "<all_urls>"
  ],

  "omnibox": {
    "keyword": "bettr"
  },

  "content_scripts": [{
    "js": [ "javascripts/jquery-2.1.4.min.js" ],
    "matches": [ "<all_urls>" ]
  }],

  "background": {
    "scripts": ["javascripts/background.js"],
    "persistent": false
  },

  "web_accessible_resources": [
    "javascripts/jquery-2.1.4.min.js",
    "javascripts/bettrlink.js",
    "stylesheets/injected.css",
    "views/injected.html",
    "views/index.html"
  ]
}
